extends ../base/layout
include ../base/mixins/avatar
block content
    div
        video(src=`/${video.videoUrl}`, controls)
    section
        header
            small #{video.hashtag}
            h1 #{video.title}
        div
            small #{video.meta.views} #{video.meta.views < 2 ? "view" : "views"}
            span ㆍ
            small #{video.meta.createdAt}
        ul
            li
                button
                    i.ic-liked
                    i.ic-liked-fill
                    strong #{video.meta.liked} 
                    //- i.fas.fa-thumbs-up 누르면
            li
                button
                    i.ic-disliked
                    strong #{video.meta.disliked}
                    //- i.fas.fa-thumbs-down 누르면
            li
                button 
                    i.ic-save
                    strong  save
    section
        div
            +avatar(video.channel)
            header
                h2 #{video.channel.name}
                small #{video.channel.subscribed} #{video.channel.subscribed < 2 ? "subscriber" : "subscribers" }
            button(type="button")  subscription
        p #{video.description}
    
    if channel && channel._id === video.channel._id.valueOf()
        hr
        a(href=`/watch/${video._id}/edit`) Edit Video &rarr;
        hr
    //- comments