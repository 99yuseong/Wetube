extends ../base/layout

block content
    section.center
        header 
            h1
                strong Login
        div.login-container                
            form(method="POST").form
                div
                    h3.label
                        label(for="email") Email
                    input(type="email", name="email", id="email")
                div    
                    h3.label
                        label(for="password") Password
                    input(type="password", name="password", id="password")
                button(type="submit").submit
                    strong Login
                a(href="/socialLogin/github") 
                    button(type="button").github
                        strong Login with Github
                a(href="/socialLogin/naver") 
                    button(type="button").naver
                        strong Login with Naver
            footer.join-part
                div
                    strong Don't have an Account? &rarr; 
                    a(href="/join") 
                        strong Join