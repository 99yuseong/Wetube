extends ../base/layout

block content
    section.center
        div.upload-container
            form(method="POST", enctype="multipart/form-data").thumbnail-form.form
                header
                    h1
                        strong Upload Video
                div
                    div.record-video
                        h3
                            label Record Video
                        div
                            video(src='', alt='video').recording-video
                        button(type="button").start-recording Start Recording
                    div
                        h3
                            label Upload Video
                        div.video-player
                            video(src='', alt='video').video
                            div.video-controller
                                input(type="range", step="0.05", value="0", min="0").time-line
                                div.controller-container
                                    div.controller-left
                                        button(type="button", name="controls").play
                                            i.ic-play
                                        button(type="button", name="controls").mute
                                            i.ic-high-volume
                                        input(type="range", step="0.05", min="0", max="1").volume
                                        div.time 
                                            span.current-time 00:00
                                            span /
                                            span.duration 00:00
                                    div.controller-right
                                        button(type="button", name="controls").fullscreen
                                            i.ic-fullscreen
                        input(type="file", name="video", accept="video/*", id="video", required).input-video
                div
                    h3
                        label(for="thumbnail") Thumbnail File
                    div.thumb
                        img(src='').img-thumbnail
                    input(type="file", name="thumbnail", accept="image/*", id="thumbnail", required).input-thumbnail
                div
                    h3
                        label(for="title") Title
                    input(type="text", placeholder="Video Title", name="title", id="title", required)
                div    
                    h3
                        label(for="description") Description 
                    input(type="text", placeholder="About your video...", name="description", id="description")
                div    
                    h3
                        label(for="hashtag") Hashtags, seperated by comma
                    input(type="text", placeholder="#more #than #three #hashtags", name="hashtag", id="hashtag")
                button(type="submit").submit 
                    strong Upload Video
block scripts
    script(src="/assets/statics/js/watch_recorder.js")
    script(src="/assets/statics/js/watch_thumbnail.js")
    script(src="/assets/statics/js/watch_videoController.js") 